;------------------------------------------------------------------------------
; Draw the eyes
; t0 - texture
; t1 - iris
; t2 - glint
;------------------------------------------------------------------------------

tex t0
tex t1
tex t2

lrp	r0, t1.a, t1, t0	; Blend in the iris with the background
mul_x2 r0, v0, r0		; Modulate by the illumination with overbright
 
add r0.rgb, r0, t2 +	; Add in the glint
mov r0.a, t0.a				
